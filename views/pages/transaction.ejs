<!DOCTYPE html>
<html>
    <script>
        function onConfirmClick(){
            var radios = document.getElementsByName('type');

            for (var i = 0, length = radios.length; i < length; i++) {
                if (radios[i].checked) {
                    // alert(radios[i].value);
                 break;
                }
            }
        }
        </script>
    <head>
        <title>VSVT Bank Dashboard</title>
        <link rel="stylesheet" href="css/page.css" >
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <%- include('../partials/head'); %>
    </head>
    <body style="height: 100vh; width: 100vw;">
        <header><%- include('../partials/header'); %></header>
        <div style="padding: 2rem;">
        <form action="/transact" method="post">
            <div class="form-group" style="display: grid; grid-template-columns: auto 1fr; gap: 2rem;">
                <label for="exampleFormControlInput1" style="width: 5rem;">Account Number : </label>
                <input class="form-control" type="text" readonly name="acctNum" value="<%- account_number %>">
            </div>
            <div class="form-group" style="display: grid; grid-template-columns: auto 1fr; gap: 2rem;">
                <label for="exampleFormControlInput1" style="width: 5rem;">Type :</label>
                <div>
                    <input type="radio" id="withdraw" name="type" value="withdraw" checked>
                    <label for="withdraw">Withdraw</label>
                    <input type="radio" id="deposit" name="type" value="deposit">
                    <label for="deposit">Deposit</label>
                </div>
            </div>
            <div class="form-group" style="display: grid; grid-template-columns: auto 1fr; gap: 2rem;">
                <label for="exampleFormControlInput1" style="width: 5rem;">Amount : </label>
                <input class="form-control" type="text" placeholder="Amount" name="amount" required>
            </div>
            <div class="form-group" style="display: grid; grid-template-columns: auto 1fr; gap: 2rem;">
                <label for="exampleFormControlInput1" style="width: 5rem;"></label>
                <div>
                        <button type="submit" class="btn btn-primary" onclick="onConfirmClick()" name="type">Submit</button>
                        <button type="reset" class="btn btn-primary" name="type">Reset</button>
                </div>
            </div>
        </form>
        </div>
        <footer><%- include('../partials/footer'); %></footer>
    </body>
</html>