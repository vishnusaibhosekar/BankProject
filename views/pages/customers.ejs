<!DOCTYPE html>
<html>
    <head>
        <title>VSVT Bank Dashboard</title>
        <link rel="stylesheet" href="css/page.css" >
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <%- include('../partials/head'); %>
    </head>
    <body style="height: 100vh; width: 100vw;">
        <header><%- include('../partials/header'); %></header>
        <div style="padding: 2rem;">
        <div>
            <h3>Branch Overview</h3>
            <form>
                <div class="form-group" style="display: grid; grid-template-columns: auto 1fr; gap: 2rem;">
                    <label for="exampleFormControlInput1" style="width: 7rem;">Bank name : </label>
                    <input class="form-control" type="text" placeholder="VSVT Bank" readonly>
                </div>
                <div class="form-group" style="display: grid; grid-template-columns: auto 1fr; gap: 2rem;">
                    <label for="exampleFormControlInput1" style="width: 7rem;">Branch name :</label>
                    <input type="email" class="form-control" id="branch_name" placeholder=<%- accounts[0].branch_name %>
                </div>
            </form>
        </div>
        <div>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">CSSN</th>
                        <th scope="col">Customer Name</th>
                        <th scope="col">Account Number</th>
                        <th scope="col">Balance</th>
                    </tr>
                </thead>
                <tbody id="table-body">
                    <%
                    console.log(accounts)
                    if(accounts?.length!=0){
                        accounts.forEach(function(data){
                    %>
                    <tr>
                        <td scope="row"><%- data.cust_ssn %></td>
                        <td><%=data.cust_name %></td>
                        <td><%=data.account_number %></td>
                        <td><%=data.balance %></td>
                    </tr>
                    <%
                    })
                }
                else{
                    console.log("error ra pumka")
                }    
                    %>
                </tbody>
            </table>
        </div>
        <div>
        <footer><%- include('../partials/footer'); %></footer>
    </body>
</html>